{
  "manifest_version": 2,
  "name": "Pushtart Authentication helper",
  "version": "0.1",
  "description": "Automates basic authentication to applications behind pushtart's HTTPProxy authentication",
  "icons": {"32": "pt_red.png"},
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://*/*",
    "http://*/*",
    "activeTab",
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "pt_red.png",
    "default_popup": "popup.html"
  },
  "background": {
   "scripts": ["background.js"]
  }
}
